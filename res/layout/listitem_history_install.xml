<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EAEAEE">
        
        <CheckBox
            android:id="@+id/installcb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"/>
		        
        <TextView
            android:id="@+id/installtv"
            android:layout_alignParentLeft="true"
           	android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/deviceidtv"
            android:layout_below="@+id/installtv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="10dp"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/contractidtv"
            android:layout_below="@+id/deviceidtv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="10dp"
            android:textSize="15sp"/>
        
        <TextView
            android:id="@+id/typetv"
            android:layout_below="@+id/contractidtv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="10dp"
            android:textSize="15sp"/>
        
        <TextView
            android:id="@+id/installmantv"
            android:layout_below="@+id/typetv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="10dp"
            android:textSize="15sp"/>
        
        <TextView
            android:id="@+id/installstatustv"
            android:layout_below="@+id/installmantv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="10dp"
            android:textSize="15sp"/>
        
    </RelativeLayout>

</RelativeLayout>

